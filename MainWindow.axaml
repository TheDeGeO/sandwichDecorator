<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="SubgueiApp.MainWindow"
        Title="SubgueiApp">
    <StackPanel Margin="20">
        <TextBlock Text="Build Your Subway" FontSize="24" Margin="0,0,0,20"/>
        
        <CheckBox Name="CheeseCheckBox" Content="Add Cheese (+$1.00)" Margin="0,5"/>
        <CheckBox Name="TomatoCheckBox" Content="Add Tomato (+$0.50)" Margin="0,5"/>
        
        <Button Name="CalculateButton" 
                Content="Calculate Total" 
                Margin="0,20"
                Click="OnCalculateClick"/>
        
        <TextBlock Name="ResultText" 
                   Text="Select your ingredients" 
                   FontSize="16"/>
    </StackPanel>
</Window>
